<?xml version="1.0" encoding="UTF-8"?>
<modification application="Heroes of Newerth" appversion="*" mmversion="1.0"
	name="Rune and Stack Timer" version="1.1.1" date="2nd of May, 2012"
	description="Warns the player a set amount of seconds before a rune will spawn and a set amount of seconds seconds before it's time to stack neutral creep camps."
	author="Akai_Baraue, modified by MaPePeR"
	weblink="http://honmods.com/index.php?r=mod/view/22"
	updatecheckurl="http://www.honmods.com/?r=mod/version/22"
	updatedownloadurl="http://www.honmods.com/?r=mod/download/22"
	>

	<applyafter name="xUI"/>

	<copyfile name="ui/runeandstacktimer.package" source="ui/runeandstacktimer.package" />
	<copyfile name="ui/runeandstacktimer_options.package" source="ui/runeandstacktimer_options.package" />


	<!-- Apply the package -->
	<editfile name="ui/game.interface">
		<find><![CDATA[</interface>]]></find>
		<insert position="before">
			<![CDATA[
			<include file="runeandstacktimer.package" />
			]]>
		</insert>
	</editfile>

	<!-- Apply options -->
    <editfile name="ui/mod_options_elements.package">
		<find><![CDATA[<!-- INSERT AFTER THIS -->]]></find>
		<insert position="after">
            <![CDATA[
            <include file="runeandstacktimer_options.package" />
            ]]>
    	</insert>
   	</editfile>
</modification>